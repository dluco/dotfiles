# bspwm panel config

PANEL_WIDTH=
PANEL_HEIGHT=14
PANEL_GEOMETRY="${PANEL_WIDTH}x${PANEL_HEIGHT}"

SEP="|"
PAD=" "

# intervals

VOLUME_INTERVAL=5
WIFI_INTERVAL=5
BATTERY_INTERVAL=5
CLOCK_INTERVAL=60

# color definitions

COLOR_WHITE="#FFfdf6e3"
COLOR_BLACK="#FF002b36"
COLOR_GREY="#FF839496"
COLOR_RED="#FFdc322f"
COLOR_BLUE="#FF268bd2"
COLOR_CYAN="#FF2aa198"
COLOR_GREEN="#FF859900"

COLOR_FOREGROUND="$COLOR_GREY"
COLOR_BACKGROUND="$COLOR_BLACK"

COLOR_FOCUSED_OCCUPIED_FG="$COLOR_WHITE"
COLOR_FOCUSED_OCCUPIED_BG="$COLOR_BLUE"
